{
    "project": {
        "name": "GTSRB Traffic Sign Classification",
        "num_classes": 43
    },
    "paths": {
        "data_root": "./data",
        "models_dir": "./models",
        "results_dir": "./results",
        "logs_dir": "./runs"
    },
    "data": {
        "image_size": 32,
        "normalize_mean": [
            0.5,
            0.5,
            0.5
        ],
        "normalize_std": [
            0.5,
            0.5,
            0.5
        ]
    },
    "augmentation": {
        "rotation_degrees": 10,
        "brightness": 0.2,
        "contrast": 0.2,
        "saturation": 0.0,
        "hue": 0.0
    },
    "training": {
        "model_type": "resnet",
        "batch_size": 64,
        "learning_rate": 0.001,
        "epochs": 30,
        "optimizer": "adam",
        "weight_decay": 0.0001,
        "scheduler": {
            "enabled": true,
            "type": "step",
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "early_stopping": {
        "enabled": true,
        "patience": 7,
        "min_delta": 0.001,
        "monitor": "val_acc",
        "mode": "max",
        "target_accuracy": 98.0
    },
    "checkpoint": {
        "save_best": true,
        "save_last": true,
        "resume_from": null
    },
    "tensorboard": {
        "enabled": true,
        "log_interval": 10,
        "log_images": true,
        "log_histograms": false
    },
    "model": {
        "custom_cnn": {
            "conv_filters": [
                32,
                64,
                128
            ],
            "fc_hidden": 512,
            "dropout": 0.5
        },
        "resnet": {
            "pretrained": true,
            "freeze_backbone": false
        }
    },
    "classes": {
        "0": "Limite 20 km/h",
        "1": "Limite 30 km/h",
